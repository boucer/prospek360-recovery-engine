// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuditRun {
  id        String   @id @default(cuid())
  status    String
  message   String?
  createdAt DateTime @default(now())

  findings RecoveryFinding[]
}

model Organization {
  id   String @id @default(cuid())
  name String

  // branding & channel defaults (V1)
  logoUrl      String?
  brandColor   String? // ex: #c33541
  replyToEmail String?
  senderPhone  String?
  timezone     String  @default("America/Toronto")
  locale       String  @default("fr-CA")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  ghl           GhlConnection?
  contacts      Contact[]
  runs          RecoveryRun[]
  conversations Conversation[]
  messages      Message[]
  templates     MessageTemplate[]
}

model GhlConnection {
  id             String @id @default(cuid())
  organizationId String @unique

  locationId String?
  apiKey     String?
  baseUrl    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

model Contact {
  id             String @id @default(cuid())
  organizationId String

  email String?
  phone String?
  name  String?

  externalId String? @unique // id GHL si tu veux

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization  Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  conversations Conversation[]
  messages      Message[]

  @@index([organizationId])
  @@index([organizationId, email])
  @@index([organizationId, phone])
}

model Conversation {
  id             String @id @default(cuid())
  organizationId String
  contactId      String

  channel String // SMS | EMAIL | FB | IG | CHAT | UNKNOWN
  status  String // OPEN | CLOSED | etc

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contact      Contact      @relation(fields: [contactId], references: [id], onDelete: Cascade)
  messages     Message[]

  @@index([organizationId, contactId])
  @@index([organizationId, updatedAt])
}

model Message {
  id             String  @id @default(cuid())
  organizationId String
  contactId      String
  conversationId String?

  direction String // IN | OUT
  channel   String // SMS | EMAIL | FB | IG | CHAT | UNKNOWN
  body      String
  sentAt    DateTime @default(now())

  externalId String? @unique // id GHL si tu veux

  createdAt DateTime @default(now())

  organization Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contact      Contact       @relation(fields: [contactId], references: [id], onDelete: Cascade)
  conversation Conversation? @relation(fields: [conversationId], references: [id], onDelete: SetNull)

  @@index([organizationId, contactId])
  @@index([organizationId, sentAt])
}

model RecoveryRun {
  id             String   @id @default(cuid())
  organizationId String
  status         String
  createdAt      DateTime @default(now())

  organization Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  findings     RecoveryFinding[]

  @@index([organizationId])
  @@index([createdAt])
}

model RecoveryFinding {
  id         String @id @default(cuid())
  auditRunId String

  type        String
  title       String
  description String
  action      String
  severity    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  handled           Boolean   @default(false)
  handledAt         DateTime?
  valueCents        Int       @default(0)
  autopilotQueued   Boolean   @default(false)
  autopilotQueuedAt DateTime?

  auditRun      AuditRun     @relation(fields: [auditRunId], references: [id], onDelete: Cascade)
  recoveryRun   RecoveryRun? @relation(fields: [recoveryRunId], references: [id])
  recoveryRunId String?

  @@index([auditRunId])
}

model MessageTemplate {
  id             String @id @default(cuid())
  organizationId String

  name    String
  channel String // SMS | EMAIL
  subject String? // for EMAIL
  body    String

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, name, channel])
  @@index([organizationId])
}

model Tenant {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique

  logoUrl      String?  // URL (plus tard: upload)
  primaryColor String?  // ex: "#c33541"
  emailFrom    String?  // ex: "leads@client.com"
  smsFrom      String?  // ex: "+1514..."

  isActive     Boolean  @default(true)

  templates    Template[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([slug])
  @@index([isActive])
}

model Template {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  key       String   // ex: "NO_REPLY_7D"
  channel   String   // "SMS" | "EMAIL" | "AUTOPILOT"
  title     String?
  content   String   // texte template
  isActive  Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, key, channel])
  @@index([tenantId])
  @@index([key])
}
